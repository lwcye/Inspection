<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="@dimen/x5"
	android:layout_marginLeft="@dimen/x10"
	android:layout_marginRight="@dimen/x10"
	android:layout_marginTop="@dimen/x5"
	android:background="@color/white"
	app:cardCornerRadius="@dimen/x3"
	app:cardElevation="@dimen/x5">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?selectableItemBackground"
		android:orientation="vertical">
		
		
		<ImageView
			android:id="@+id/iv_item_shcool_item"
			android:layout_width="match_parent"
			android:layout_height="@dimen/x200"
			android:adjustViewBounds="true"
			android:scaleType="fitCenter"
			android:src="@drawable/img_shcool_item_img" />
		
		<TextView
			android:id="@+id/tv_item_shcool_item_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/x10"
			android:paddingRight="@dimen/x10"
			android:paddingTop="@dimen/x10"
			android:textColor="@color/black_title"
			android:textSize="@dimen/t18"
			tools:text="强筋骨、明纪律 铸造执纪铁军" />
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/x10"
			android:layout_marginTop="@dimen/x5">
			
			<TextView
				android:id="@+id/tv_item_shcool_item_dw"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:paddingLeft="@dimen/x10"
				android:paddingRight="@dimen/x10"
				android:textColor="@color/black_hint"
				android:textSize="@dimen/t14"
				tools:text="2017-01-01" />
			
			<TextView
				android:id="@+id/tv_item_shcool_item_data"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="right"
				android:paddingRight="@dimen/x5"
				android:textColor="@color/black_hint"
				android:textSize="@dimen/t14"
				tools:text="2017-01-01" />
		</LinearLayout>
	
	</LinearLayout>
</android.support.v7.widget.CardView>
